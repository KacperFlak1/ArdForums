<% title = "Register - AForums.com" %>

<div class="forum-container">
  <h2>Register</h2>
  <form method="POST" action="/register" class="auth-form" onsubmit="console.log('Form submitted', {username: document.getElementById('username').value, password: '***'})">
    <div class="form-group">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required placeholder="Enter username">
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required placeholder="Enter password">
    </div>
    <button type="submit">Register</button>
  </form>
  
  <div style="margin-top: 2rem; padding: 1rem; background: #f0f0f0; border-radius: 4px; font-size: 0.9rem;">
    <strong>Debug:</strong> <a href="/test-register" target="_blank">Test Registration (bypasses form)</a> | 
    <a href="/debug" target="_blank">System Debug Info</a>
  </div>
  <p><a href="/login">Already have an account? Login here</a></p>
</div>