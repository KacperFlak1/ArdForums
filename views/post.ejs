<% title = post.title %>

<div class="forum-container">
  <div class="post">
    <div class="post-user">
      <img src="<%= post.avatar %>" alt="pfp">
      <div><strong><%= post.username %></strong></div>
      <div class="badges">
        <% post.badges.forEach(b => { %>
          <span class="badge <%= b %>"><%= b %></span>
        <% }) %>
      </div>
    </div>
    <div class="post-content">
      <h3><%= post.title %></h3>
      <p><%= post.content %></p>
    </div>
  </div>
</div>
